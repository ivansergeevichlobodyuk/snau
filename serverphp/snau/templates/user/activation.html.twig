{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello, {{ user.name ~ ' '~ user.surname }}! âœ…</h1>
    This friendly message is coming from:
    <ul>
        {{ form_start(form, {'attr':{'id': 'updated', 'method':'POST', 'action':path('activation',{'hash':app.request.get('hash')}) } }) }}
        {{ form_row(form.plainPassword.first, {'label_attr': {'class': 'uk-form-label'}, 'attr': {'class': 'uk-input'}}) }}
        {{ form_row(form.plainPassword.second, {'label_attr': {'class': 'uk-form-label'}, 'attr': {'class': 'uk-input'}}) }}
            <button class="custom-btn uk-button uk-align-center uk-margin-top" type="submit">{{ "REGISTER"|trans }}</button>
        {{ form_end(form) }}
    </ul>
</div>
{% endblock %}
