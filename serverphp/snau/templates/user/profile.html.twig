{% trans_default_domain 'translations' %}
{% extends 'base.html.twig' %}
{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    /*.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }*/
</style>
    <a class="uk-link-muted" href="{{ path("app_logout") }}">Logout</a>
    <div>
        {{ barcode|raw }}
    </div>
    <div>
        <img src="{{ qr_code_data_uri(app.user.code, { writer: 'svg', size: 150 }) }}" />
    </div>
<div>
    <ul>
        <label>{{ "NAME"|trans }}</label>{{ user.name }}
        <label>{{ "USERNAME"|trans }}</label><li>{{ user.surname }}</li>
        <label>{{ "PHONE"|trans }}</label><li>{{ user.phone }}</li>
        <label>{{ "BUILD"|trans }}</label><li>{{ user.build }}</li>
        <label>{{ "FLAT"|trans }}</label><li>{{ user.flatNum }}</li>
    </ul>
</div>

{% endblock %}