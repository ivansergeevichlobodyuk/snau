{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="login-page-wrap">

        <div class="uk-position-center uk-padding-small " >
            <div class="uk-text-center">
                <img class="uk-width-small" src="{{ asset('build/images/snau-logo.png') }}" alt="logo">
            </div>
            <form class="uk-width-medium" method="post">

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <h3 class="uk-text-center uk-margin-small-top">Please sign in</h3>
                {% if error %}
                    <div class="uk-text-danger uk-text-small uk-text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="uk-margin">
                    <label class="uk-form-label" for="inputPhone">Phone</label>
                    <div class="uk-form-controls">
                        <input type="text" value="{{ last_username }}" name="phone" id="inputPhone" class="uk-input uk-form-small" required autofocus>
                    </div>

                </div>
                <div class="uk-margin">
                    <label class="uk-form-label" for="inputPassword">Password</label>
                    <div class="uk-form-controls">
                        <input type="password" name="password" id="inputPassword" class="uk-input uk-form-small" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                </div>



                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <div class="uk-text-center">
                    <button class="custom-btn uk-button" type="submit">
                        Sign in
                    </button>
                </div>

            </form>
        </div>
    </div>


{% endblock %}
